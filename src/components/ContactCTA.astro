---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Ready to Get Started?",
  description = "Let's discuss how we can help solve your integration challenges."
} = Astro.props;
---

<section class="bg-copper text-white py-16 rounded-lg">
  <div class="container mx-auto px-6 text-center">
    <h2 class="font-heading text-3xl font-bold mb-4">{title}</h2>
    <p class="text-xl mb-8">{description}</p>
    <a
      href="/contact"
      class="inline-block bg-white text-copper font-medium py-3 px-8 rounded-md hover:bg-gray-100 transition-colors"
    >
      Contact Us
    </a>
  </div>
</section>
